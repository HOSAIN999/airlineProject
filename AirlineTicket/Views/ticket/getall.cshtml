<form asp-action="Search" asp-controller="Ticket" method="get"  >
	  <div class="row">
	                     <div  class="row">
                             
                                <div class="col-lg-6 col-md-6">
                                    <header class="card-header">
                                        <h3 class="card-title"><span>ثبت بلیط هواپیما</span></h3>
                                    </header>
                                    <div class="login_box">



                                            <div class="row">
                                                <div class="col-md-12 col-sm-12">
                                                    
                                                    <div class="form-account-row">
                                                        <input class="input_second input_all validate" type="search" name="Ticket" placeholder="جستجو">
                                                    </div>
                                                </div>
                    
                                            </div>


                                    </div>
                                </div>
                               
                                <div class="col-12 text--center">
