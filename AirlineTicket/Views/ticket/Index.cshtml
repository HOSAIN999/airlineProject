    <div class="row">
        <form asp-action="instalTicket" asp-controller="Ticket" method="post" enctype="multipart/form-data" class="">

            <div class="col-lg-6 col-md-6">
                <header class="card-header">
                    <h3 class="card-title"><span>ثبت بلیط هواپیما</span></h3>
                </header>
                <div class="login_box">



                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title">مبدا </div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" name="Mabdae" placeholder="مثال: مشهد">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title">مقصد</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" name="Maghsad" placeholder="مثال: تهران">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>*</span> شماره پرواز </div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="number" name="numAIR" placeholder="مثال: 0911">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"> نوع پرواز</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" name="TypeAir" placeholder="مثال:داخلی">
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"> قیمت </div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" type="number" name="Price" placeholder="قیمت">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"> تصاویر</div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" type="file" name="Pic" placeholder="">
                                </div>
                            </div>


                         @*   <div class="col-12">
                                 @{
                                    foreach (BE.Company item in ViewBag.Company)
                                    {
                                        <div class="form-account-agree">
                                            <label class="checkbox-form checkbox-primary">
                                                <input type="checkbox" id="checkbox" name="Companys" value="@item.ID">
                                                <span class="checkbox-check"> </span>
                                            </label>
                                            <label for="agree">  @item.Name</label>
                                        </div>

                                    }
                                    }
                            </div>*@
                        </div>


                    </div>
                </div>
                <div class="modal-share modal-width-custom2 modal fade " id="addressModal" tabindex="-1" role="dialog" aria-labelledby="addressModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="addressModalLabel">انتخاب شرکت</h4>
                            </div>

                            <div class="modal-body">

                                <div class="col-12">
                                    @{
                                    foreach (BE.Company item in ViewBag.Company)
                                    {
                                        <div class="form-account-agree">
                                            <label class="checkbox-form checkbox-primary">
                                                <input type="checkbox" id="checkbox" name="Companys" value="@item.ID">
                                                <span class="checkbox-check"> </span>
                                            </label>
                                            <label for="agree">  @item.Name</label>
                                        </div>

                                    }
                                    }


                            </div>
                            <div class="text-left">

                                <button type="button" id="save" class="btn btn-main-masai" data-dismiss="modal" aria-hidden="true">تایید شرکت </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             <div>

                <div class="col-12 text--center">
                    <button type="button" id="selectcompany" class="btn big_btn btn-main-masai" data-toggle="modal" data-target="#addressModal">ثبت شرکت    </button>
                </div>
            </div>
            <input hidden id="Companies" />
            <div class="col-12 text--center">
                <button type="submit" class="btn big_btn btn-main-masai">ثبت بلیط   </button>
            </div>
           
        </div>
    </form>
</div>
@section Section{
    <script src="~/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
