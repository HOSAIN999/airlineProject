    <!-- custom Js -->
    <script src="~/assets/js/main.js" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            $("#selectcompany").focus(function() {
                $("addressModalLabel").modal("show");
            });
            $("#save").click(function() {
                $("#addressModal").modal("close");
                var ids = [];
                $('#checkbox:check').each(function(i) {
                    var checkboxValue = $(this).val()
                    if (checkboxValue !== 'on') {
                        ids.push(checkboxValue)
                    }
                });
                ids.each(function(i) {
                    var COM = $("#Companies").val();
                    COM.push(ids[i]);
                })
            });
        });
    </script>
}
